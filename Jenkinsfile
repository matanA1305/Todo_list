pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                echo 'מבצע בנייה של האפליקציה...'
            }
        }
        stage('test') {
            steps {
                echo 'מריץ בדיקות...'
            }
        }
        stage('deploy') {
            steps {
                echo 'מבצע פריסה של האפליקציה...'
            }
        }
    }
}

